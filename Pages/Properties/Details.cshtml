@page "{id:int}"
@model RealEstateWeb.Pages.Properties.DetailsModel
@{
}

<h2>Détails de la propriété</h2>

@if (User.HasClaim("OwnerProfile", "true"))
{
    <a asp-page="UploadImages"
       asp-route-propertyId="@Model.Property.Id"
       class="btn btn-outline-primary mb-3">
        Ajouter des images
    </a>
}


<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Property.AddressLine</h5>
        <p class="card-text">
            <strong>Ville :</strong> @Model.Property.City <br />
            <strong>Région :</strong> @Model.Property.Region <br />
            <strong>Type :</strong> @Model.Property.PropertyType.Description <br />
            <strong>Surface :</strong> @Model.Property.PropertySize m²
        </p>
    </div>
</div>

<h4>Annonces</h4>

@if (!Model.Property.Listings.Any())
{
    <p>Aucune annonce pour ce bien.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listing in Model.Property.Listings)
            {
                <tr>
                    <td>@listing.ListingType.Description</td>
                    <td>@listing.Price</td>
                    <td>@listing.ListingStatus.Description</td>
                    <td>@listing.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
}

<h4>Historique des prix</h4>

@foreach (var listing in Model.Property.Listings)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Prix</th>
                <th>Début</th>
                <th>Fin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in listing.PriceHistories.OrderByDescending(p => p.StartDate))
            {
                <tr>
                    <td>@h.Price</td>
                    <td>@h.StartDate</td>
                    <td>@(h.EndDate?.ToString() ?? "Actuel")</td>
                </tr>
            }
        </tbody>
    </table>
}


<h4>Galerie</h4>

@if (Model.Property.Medias.Any())
{
    <div class="row">
        @foreach (var media in Model.Property.Medias)
        {
            <div class="col-md-3 mb-3">
                <img src="@media.MediaPath"
                     class="img-fluid rounded" />
            </div>
        }
    </div>
}
else
{
    <p>Aucune image.</p>
}


<a asp-page="Index" class="btn btn-secondary">Retour</a>